{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "web/bundles",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "web/bundles/*"
      ],
      "pimfront": [
        "web/bundles/pimfront/*"
      ]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "vendor",
    "src"
  ],
  "types": [
    "typePatches",
    "node"
  ]
}
